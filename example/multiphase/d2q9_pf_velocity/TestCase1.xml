<?xml version="1.0"?>
<CLBConfig version="2.0" output="output/">
  <Geometry nx="128" ny="128" >
      <MRT>
        <Box />
      </MRT>
      <Wall mask="ALL" name="border" >
        <Box nx="1"/>
        <Box dx="-1"/>
        <Box ny="1"/>
        <Box dy="-1"/>
      </Wall>
      <None name="heated_region">
        <Box dy="-1" /> 
      </None>        
  </Geometry>
  <Model>
    <Param name="T_init" value="0"/>
    <Param name="T_init" value="1" zone="heated_region"/>
    <Param name="T_ref" value="1"/>
    <Param name="sigma_T" value="1e-3"/>
    <Param name="k_h" value="0.1"/>
    <Param name="k_h" value="0.1"/>

    <Param name="PhaseField_h" value="1"/>
    <Param name="PhaseField_l" value="0" />
    <Param name="PhaseField_init" value="1"/>
    <Param name="Density_h" value="1"/>
    <Param name="Density_l" value="1"/>
    <Param name="sigma" value="1e-5"/>
    <Param name="Viscosity_h" value="0.16"/>
    <Param name="Viscosity_l" value="0.16"/>

    <Param name="M" value="0.05"/>
    <Param name="IntWidth" value="4"/>
  </Model>
  <VTK/>
  <Solve Iterations="1000" output="output/"> 
    <VTK Iterations="50"/> 
  </Solve>
</CLBConfig>
