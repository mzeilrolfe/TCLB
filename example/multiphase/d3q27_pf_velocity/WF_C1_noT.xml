<?xml version="1.0"?>
<CLBConfig version="2.0" output="output/">
	<Units>
		<Param _name="dx" value="0.0001m" gauge="2"/>
		<Param _name="viscosity" value="1e-6m2/s" gauge="0.01"/>
		<Param _name="st" value="0.0728kg/s2" gauge="1e-4"/>
	</Units>
      <Geometry nx="0.007m" ny="0.007m" nz="0.005m" >
      <MRT><Box /></MRT>
        <Wall mask="ALL" name="border" >
                <Box nx="1"/>
                <Box dx="-1"/>
                <Box ny="1"/>
                <Box dy="-1"/>
                <Box nz="1"/>
                <Box dz="-1"/>
                <STL file="example/multiphase/d3q27_pf_velocity/WF_C1_1.stl" scale="1e-3m"/> 
        </Wall>
        <None name="heated_region">
             <STL file="example/multiphase/d3q27_pf_velocity/WF_C1_1.stl" scale="1e-3m"/>
        </None>        

        
  </Geometry>
    <Model>
	<Param name="Radius" 		value="0.00075m"/>
	<Param name="CenterX" 		value="0.0035m"/>
	<Param name="CenterY" 		value="0.0035m"/>
	<Param name="CenterZ" 		value="0.0025m"/>
	<Param name="BubbleType" 	value="1"/>
	<Param name="Density_h"     value="1"/>
	<Param name="Density_l"     value="0.001"/>
	<Param name="Viscosity_h"   value="1e-6m2/s"/>
	<Param name="Viscosity_l"   value="12.71e-6m2/s"/>
	<Param name="sigma"         value="0.0728kg/s2"/>
	<Param name="M"             value="0.05"/>
	<Param name="IntWidth"      value="4"/>
	<Param name="radAngle"      value="60d"/>
      	<Param name="T_init"        value="0"/>
      	<Param name="T_init"        value="0" zone="heated_region"/>
	<Param name="T_ref"    	value="0"/>
	<Param name="sigma_T" 	value="-2.5e-5"/>
	<Param name="cp_h"      value="100"/>
	<Param name="cp_l"	value="24"/>
	<Param name="k_h" 	value="0.01"/>
	<Param name="k_l" 	value="0.0005495"/>
	<Param name="GravitationZ" 	value="-1m/s2"/>
	


    </Model>
            <Init/>
        <Container>
                <Stop TempChangeBelow="1e-4" Times="2" Iterations="100"/>
                <RunAction name="TempToSteadyState"  Iterations="1000"/>
        </Container>

<VTK/>
<VTK Iterations="60000"/> 
<Log Iterations="500"/>
<Solve Iterations="300000" output="output/"> 
</Solve>
</CLBConfig>

